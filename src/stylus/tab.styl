//tab
@import "common.styl"

.tab {
  height: 45px;
}

.tab_box {
  width: 100%;
  height: 45px;
  display: flex;
  white-space: nowrap;
  box-sizing: border-box;
  border-bottom: 1px solid $gray-light;
  background: $white;

  .tab_item {
    flex 1;
    display: inline-block;
    min-width: 80px;
    padding: 0 10px;
    line-height: 0;
    box-sizing: border-box;
    text-align: center;

    .tab_title {
      display: inline-block;
      max-width: 100%;
      height: 44px;
      line-height: 44px;
      box-sizing: border-box;
      overflow: hidden;
      text-overflow: ellipsis;
      word-break: keep-all;
      font-size: 14px;
      color: $gray-darker;
    }

    .tab_title-selected {
      color: $red;
      border-bottom: 2px solid $red;
    }
  }

  .tab_item-selected {
    color: $red;
    border-bottom: 2px solid $red;
  }
}

.tab-fixed {
  position: fixed;
  top: 0;
  z-index: 1;

}
