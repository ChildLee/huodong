$primary = darken(#428bca, 6.5%); // #337ab7
$success = #5cb85c;
$info = #5bc0de;
$warning = #f0ad4e;
$danger = #d9534f;
$blue = #21afa9

$mg(value) {
  .mg{value} {
    margin: value;
  }

  .mg{value}-lr {
    margin-left: value;
    margin-right: value;
  }

  .mg{value}-tb {
    margin-top: value;
    margin-bottom: value;
  }

  .mg{value}-l {
    margin-left: value;
  }

  .mg{value}-r {
    margin-right: value;
  }

  .mg{value}-t {
    margin-top: value;
  }

  .mg{value}-b {
    margin-bottom: value;
  }
}

$pd(value) {
  .pd{value} {
    padding: value;
  }

  .pd{value}-lr {
    padding-left: value;
    padding-right: value;
  }

  .pd{value}-tb {
    padding-top: value;
    padding-bottom: value;
  }

  .pd{value}-l {
    padding-left: value;
  }

  .pd{value}-r {
    padding-right: value;
  }

  .pd{value}-t {
    padding-top: value;
  }

  .pd{value}-b {
    padding-bottom: value;
  }
}

//边距
$mg(10px)
$mg(15px)

$pd(10px)
$pd(15px)

.pd-no-l {
  padding-left none;
}

.pd-no-r {
  padding-right none;
}

.pd-no-t {
  padding-top none;
}

.pd-no-b {
  padding-bottom none;
}

.mg-no-l {
  margin-left none;
}

.mg-no-r {
  margin-right none;
}

.mg-no-t {
  margin-top none;
}

.mg-no-b {
  margin-bottom none;
}

//遍历宽度
for $i in 1..20 {
  .w{$i*10} {
    width: ($i * 10px);
  }
}

//遍历百分比宽度
for $i in 1..19 {
  .w-{$i*5} {
    width: ($i * 5%);
  }
}

.w {
  width: 100%;
}

//遍历高度
for $i in 1..20 {
  .h{$i*10} {
    height: ($i * 10px);
  }
}

//遍历百分比高度
for $i in 1..19 {
  .h-{$i*5} {
    height: ($i * 5%);
  }
}

.h {
  height: 100%;
}

